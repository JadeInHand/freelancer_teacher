<!DOCTYPE html>
<html>
<head>
  <title>FreelanceTeacher</title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="responsive-menu">
    <% if @current_user.present? %>
    	<div class="col-md-7">
			</div>
			<div class="col-md-5">
			<%= link_to "Welcome #{ @current_user.user_name }!(logout)", login_path, :method => "delete", :data => {:confirm => "Are you sure you wish to logout?"} %>
			-
			<%= link_to "My Account", user_path(@current_user) %>
			-
			<%= link_to "Projects", projects_path %>
			</div>
		<% elsif @current_user.nil? %>
			<div class="col-md-9"></div>
			<div class="col-md-3">
				<%= link_to "Login", login_path %>
				-
				<%= link_to "New User", login_path %>
			</div>
		<% end %>
  </div>
	<%= include_gon %>

	<%= yield %>

</body>
</html>
