<div class="user-form">
<%= form_for @user do |f| %>

  <div class="field">
    <%= f.label :user_name %><br>
    <%= f.text_area :user_name %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </div>


  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field actions">
    <%= f.submit "Register", :class => "submit-user" %>
  </div>
  
<% end %>
</div>
</div>